- if controller_name != 'sessions'
  = link_to "ログイン", new_session_path(resource_name), class: 'auth-link'

- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "アカウント登録", new_registration_path(resource_name), class: 'auth-link'

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "パスワードを忘れた場合", new_password_path(resource_name), class: 'auth-link'

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "確認メールを再送信", new_confirmation_path(resource_name), class: 'auth-link'

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "アカウントロック解除", new_unlock_path(resource_name), class: 'auth-link'

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'btn btn-secondary'

.auth-links-styles
  :css
    .auth-link {
      display: block;
      text-align: center;
      margin: 10px 0;
      color: #007bff;
      text-decoration: none;
    }

    .auth-link:hover {
      text-decoration: underline;
    }